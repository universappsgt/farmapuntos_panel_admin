{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "function": "remix"
      }
    ],
    "headers": [
      {
        "source": "/build/_assets-not-well-known/remix-function.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "s-maxage=604800, max-age=0, must-revalidate"
          }
        ]
      }
    ]
  }
}